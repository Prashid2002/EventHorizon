<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="#FFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/paperbg"
        android:padding="16dp">

        <!-- QR Code -->
        <ImageView
            android:id="@+id/ticket_qr_code"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="QR Code"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"/>

        <!-- Event Title -->
        <TextView
            android:id="@+id/ticket_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Venue -->
        <TextView
            android:id="@+id/ticket_event_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Venue"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Date and Time -->
        <TextView
            android:id="@+id/ticket_event_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <!-- Price -->
        <TextView
            android:id="@+id/ticket_event_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- Dashed Line Below Price -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/dashed_line"
            android:layout_marginBottom="12dp"/>

        <!-- Booked By -->
        <TextView
            android:id="@+id/ticket_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booked by"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <!-- User Email -->
        <TextView
            android:id="@+id/ticket_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="14sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
